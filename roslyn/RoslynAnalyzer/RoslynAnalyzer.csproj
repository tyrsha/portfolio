<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Nullable>enable</Nullable>
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <LangVersion>9</LangVersion>    
        <OutputItemType>Analyzer</OutputItemType>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <RunPostBuildEvent>Always</RunPostBuildEvent>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.8.0" />
      <PackageReference Include="Scriban" Version="6.5.0" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="EnumLookupExtensions.scriban" />
      <EmbeddedResource Include="EnumLookupExtensions.scriban" />
    </ItemGroup>
    
    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
      <Exec Command="copy bin\Debug\netstandard2.0\RoslynAnalyzer.dll ..\..\sample\Assets\roslyn" />
    </Target>

</Project>
